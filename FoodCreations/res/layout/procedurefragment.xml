<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/woodenbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical">

	    <EditText
	        android:id="@+id/procedurET"
	        android:layout_width="match_parent"
	        android:layout_height="150dp"
	        android:ems="10"
	        android:hint="Procedure" 
	        android:textColor="#FFFFFF">
	
	    </EditText>
	
	    <Button
	        android:id="@+id/addProc"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Add a Procedure" 
	        android:textColor="#FFFFFF"/>
	</LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <ListView
        android:id="@+id/procedurelist"
        android:layout_width="240dp"
        android:layout_height="238dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" >
    </ListView>

    <ImageView
        android:id="@+id/acceptBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/procedurelist"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_weight="0.51"
        android:src="@drawable/ic_accept" />

	</RelativeLayout>
	
</LinearLayout>